<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.krisgun.vibra.util.Converter" />
        <import type="com.krisgun.vibra.util.DataNames" />
        <variable
            name="detailsVM"
            type="com.krisgun.vibra.ui.details.DetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
    tools:context=".ui.measure.MeasureFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="?attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/measurement_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{detailsVM.measurementLiveData.title}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/material_on_surface_emphasis_high_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_header"
                    tools:text="Measurement bbbc0bbe" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/measurement_title">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/info_cl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/data_collection"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/material_on_surface_emphasis_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/date_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/info_title"
                            app:srcCompat="@drawable/ic_baseline_calendar_today_24"
                            app:tint="@color/material_on_surface_emphasis_high_type" />

                        <TextView
                            android:id="@+id/date_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:text="@{detailsVM.measurementLiveData.date.toLocaleString()}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/material_on_background_emphasis_medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/date_icon"
                            app:layout_constraintTop_toBottomOf="@+id/info_title"
                            tools:text="Jan 25 2021 01:35" />

                        <ImageView
                            android:id="@+id/duration_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/date_icon"
                            app:srcCompat="@drawable/ic_baseline_timer_24"
                            app:tint="@color/material_on_surface_emphasis_high_type" />

                        <TextView
                            android:id="@+id/duration_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="@{Converter.durationToString(detailsVM.measurementLiveData.duration_seconds)}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/material_on_surface_emphasis_medium"
                            app:layout_constraintStart_toEndOf="@+id/duration_icon"
                            app:layout_constraintTop_toBottomOf="@+id/date_text"
                            tools:text="5 seconds" />

                        <ImageView
                            android:id="@+id/sampling_frequency_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/duration_icon"
                            app:srcCompat="@drawable/ic_sampling_frequency"
                            app:tint="@color/material_on_surface_emphasis_high_type" />

                        <TextView
                            android:id="@+id/sampling_frequency_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:text="@{Converter.detailsFrequencyToString(detailsVM.measurementLiveData.sampling_frequency)}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/material_on_surface_emphasis_medium"
                            app:layout_constraintStart_toEndOf="@+id/sampling_frequency_icon"
                            app:layout_constraintTop_toBottomOf="@+id/duration_text_view"
                            tools:text="50.00 Hz" />

                        <ImageView
                            android:id="@+id/data_points_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sampling_frequency_icon"
                            app:srcCompat="@drawable/ic_data_points_24px"
                            app:tint="@color/material_on_surface_emphasis_high_type" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:text="@{Converter.dataPointsToString(detailsVM.measurementLiveData.num_of_datapoints)}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/material_on_surface_emphasis_medium"
                            app:layout_constraintStart_toEndOf="@+id/data_points_icon"
                            app:layout_constraintTop_toBottomOf="@+id/sampling_frequency_text"
                            tools:text="30 000 data points" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/resonances_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/info_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/resonances_cl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/resonances_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/fundamental_frequency"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/material_on_surface_emphasis_medium" />

                        <TextView
                            android:id="@+id/resonances_amplitude_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/amplitude_spectrum"
                            app:layout_constraintTop_toBottomOf="@id/resonances_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/resonances_amplitude_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/resonances_amplitude_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            tools:text="7.62 Hz: 1.2"
                            android:text="@{Converter.amplitudeSpectrumResonanceToString(detailsVM.amplitudeSpectrumResonance)}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/material_on_surface_emphasis_medium" />

                        <TextView
                            android:id="@+id/resonances_pwr_spectrum_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/power_spectrum_graph"
                            app:layout_constraintTop_toBottomOf="@id/resonances_amplitude_data"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/resonances_pwr_spectrum_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/material_on_surface_emphasis_medium"
                            android:text="@{Converter.powerSpectrumResonanceToString(detailsVM.powerSpectrumResonance)}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/resonances_pwr_spectrum_title"
                            tools:text="7.62 Hz: 22.5 dB" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/raw_data_graph_cl"
                    android:layout_width="match_parent"
                    android:layout_height="386dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resonances_card"
                    android:visibility="@{detailsVM.graphVisibleLiveData[DataNames.RAW_ACC_DATA.ordinal]}">

                    <TextView
                        android:id="@+id/raw_data_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/raw_data_graph"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/raw_data_line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="34dp"
                        android:setLineChartData="@{detailsVM.rawDataLiveData}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/raw_data_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/total_acceleration_graph_cl"
                    android:layout_width="match_parent"
                    android:layout_height="386dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/raw_data_graph_cl"
                    android:visibility="@{detailsVM.graphVisibleLiveData[DataNames.TOTAL_ACCELERATION.ordinal]}">

                    <TextView
                        android:id="@+id/total_acceleration_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/total_acceleration"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/total_acceleration_line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="34dp"
                        android:setTotAccLineChartData="@{detailsVM.totAccelDataLiveData}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/total_acceleration_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/acc_peak_occurrences_cl"
                    android:layout_width="match_parent"
                    android:layout_height="386dp"
                    android:layout_marginTop="34dp"
                    app:layout_constraintTop_toBottomOf="@id/total_acceleration_graph_cl"
                    android:visibility="@{detailsVM.showAccPeakOccurrences}">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/acc_peak_occurrences"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:accelerationPeakOccurrences="@{detailsVM.accPeakOccurrencesLiveData}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/amplitude_spectrum_cl"
                    android:layout_width="match_parent"
                    android:layout_height="386dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/acc_peak_occurrences_cl"
                    android:visibility="@{detailsVM.graphVisibleLiveData[DataNames.AMPLITUDE_SPECTRUM.ordinal]}">

                    <TextView
                        android:id="@+id/amplitude_spectrum_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"

                        android:text="@string/amplitude_spectrum"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="34dp"
                        android:amplitudeSpectrumData="@{detailsVM.amplitudeSpectrumLiveData}"
                        android:amplitudeSpectrumPeaks="@{detailsVM.amplitudeSpectrumPeaksLiveData}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/amplitude_spectrum_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/power_spectrum_cl"
                    android:layout_width="match_parent"
                    android:layout_height="386dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amplitude_spectrum_cl"
                    android:visibility="@{detailsVM.graphVisibleLiveData[DataNames.POWER_SPECTRUM.ordinal]}">


                    <TextView
                        android:id="@+id/power_spectrum_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/power_spectrum_graph"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="34dp"
                        android:powerSpectrumData="@{detailsVM.powerSpectrumLiveData}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/power_spectrum_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
